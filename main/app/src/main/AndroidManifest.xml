<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.athlete_monitor_system">

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MusicPlayer"></activity>
        <activity android:name=".Athlete_Sys.add_reminder" /> <!-- home activities -->
        <activity android:name=".MainActivity" />
        <activity android:name=".Login_Sys.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login_Sys.RegisterActivity" /> <!-- Athlete_Sys activities -->
        <activity android:name=".AthleteNev" />
        <activity android:name=".Athlete_Sys.Athlete_talk" />
        <activity android:name=".Athlete_Sys.athlete_talk2" />
        <activity android:name=".Athlete_Sys.athlete_talk3" />
        <activity android:name=".Athlete_Sys.athlete_talk4" /> <!-- Coach_Sys activities -->
        <activity android:name=".CoachNev" />
        <activity android:name=".Coach_Sys.talk" />
        <activity android:name=".Coach_Sys.talk2" />
        <activity android:name=".Coach_Sys.talk3" />
        <activity android:name=".Coach_Sys.talk4" /> <!-- Shop_Sys -->
        <activity
            android:name=".Shop_Sys.Cart"
            android:parentActivityName=".Shop_Sys.shop" />
        <activity
            android:name=".Shop_Sys.search_product"
            android:parentActivityName=".Shop_Sys.shop" />
        <activity
            android:name=".Shop_Sys.shop"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Shop_Sys.buy_product"
            android:parentActivityName=".Shop_Sys.shop" />
        <activity
            android:name=".Shop_Sys.add_product"
            android:parentActivityName=".Shop_Sys.shop" /> <!-- old activities -->
        <activity android:name=".Athlete" />
        <activity android:name=".coach" />
        <activity
            android:name=".Athlete_Sys.old.athlete_train"
            android:parentActivityName=".Athlete" />
        <activity
            android:name=".Coach_Sys.old.coach_train"
            android:parentActivityName=".coach" />
        <activity
            android:name=".Athlete_Sys.old.athlete_leaderboard"
            android:parentActivityName=".Athlete" />
        <activity
            android:name=".Coach_Sys.old.coach_leaderboard"
            android:parentActivityName=".coach" />
        <activity
            android:name=".Athlete_Sys.old.health_data"
            android:parentActivityName=".Athlete" />
        <activity
            android:name=".Coach_Sys.old.coach_health_data"
            android:parentActivityName=".coach" />
        <activity
            android:name=".Coach_Sys.old.coach_chat_room"
            android:parentActivityName=".coach" />
        <activity
            android:name=".Athlete_Sys.old.athlete_chat_room"
            android:parentActivityName=".Athlete" />
    </application>

</manifest>