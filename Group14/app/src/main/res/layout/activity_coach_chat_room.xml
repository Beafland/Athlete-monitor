<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/bkcolor">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/room1"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:text="Room"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

<Button
    android:id="@+id/room1"
    android:layout_width="227dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_marginTop="60dp"
    android:layout_above="@+id/room2"
    android:background="@color/btnColor"
    android:textColor="@color/btnText"
    android:text="Chat Room 1" />

<Button
    android:id="@+id/room2"
    android:layout_width="227dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="60dp"
    android:background="@color/btnColor"
    android:textColor="@color/btnText"
    android:text="Chat Room 2"
    android:layout_centerInParent="true" />

<Button
    android:id="@+id/room3"
    android:layout_width="227dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="60dp"
    android:layout_centerInParent="true"
    android:layout_below="@+id/room2"
    android:background="@color/btnColor"
    android:textColor="@color/btnText"
    android:text="Chat Room 3" />

<Button
    android:id="@+id/room4"
    android:layout_width="227dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="60dp"
    android:layout_centerInParent="true"
    android:layout_below="@+id/room3"
    android:background="@color/btnColor"
    android:textColor="@color/btnText"
    android:text="Chat Room 4" />


</RelativeLayout>